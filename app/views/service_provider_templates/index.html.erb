<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All service providers
    </h1>

    <a href="/service_providers/new" class="btn btn-block btn-outline-secondary">
      Add a new service provider
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Email
        </th>

        <th>
          Password
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @service_providers.each do |service_provider| %>
      <tr>
        <!-- Display service_provider.id start -->
        <td>
          <%= service_provider.id %>
        </td>
        <!-- Display service_provider.id end -->

        <!-- Display service_provider.email start -->
        <td>
          <%= service_provider.email %>
        </td>
        <!-- Display service_provider.email end -->

        <!-- Display service_provider.password start -->
        <td>
          <%= service_provider.password %>
        </td>
        <!-- Display service_provider.password end -->

        <!-- Display service_provider.created_at start -->
        <td>
          <%= time_ago_in_words(service_provider.created_at) %> ago
        </td>
        <!-- Display service_provider.created_at end -->

        <!-- Display service_provider.updated_at start -->
        <td>
          <%= time_ago_in_words(service_provider.updated_at) %> ago
        </td>
        <!-- Display service_provider.updated_at end -->

        <td>
          <a href="/service_providers/<%= service_provider.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @service_providers, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
