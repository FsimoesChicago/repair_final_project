<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Repair #<%= @repair.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/repairs" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_client == @repair.client %>
          <a href="/repairs/<%= @repair.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit repair
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_client == @repair.client %>
          <a href="/delete_repair/<%= @repair.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete repair
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        Location
      </dt>
      <dd>
        <div>
          <%= render partial: "repair_templates/one_photo_map" %>
        </div>
      </dd>

      <dt>
        Repair type
      </dt>
      <dd>
        <%= @repair.repair_type %>
      </dd>

      <dt>
        Price
      </dt>
      <dd>
        <%= @repair.price %>
      </dd>

      <dt>
        Client
      </dt>
      <dd>
        <% if @repair.client.present? %>
          <a href="/clients/<%= @repair.client_id %>">
            <%= @repair.client.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>
        Service provider
      </dt>
      <dd>
        <% if @repair.service_provider.present? %>
          <a href="/service_providers/<%= @repair.service_provider_id %>">
            <%= @repair.service_provider.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>
        Car type
      </dt>
      <dd>
        <%= @repair.car_type %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@repair.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@repair.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

