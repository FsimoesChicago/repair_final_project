<% if @repair.present? %>
  <% if @repair.errors.any? %>
    <% @repair.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new repair
</h1>


<hr>

<form action="/create_repair" method="post">

  <div class="form-group">
    <label for="location">
      Location
    </label>

    <input type="text" id="location" name="location" class="form-control" value="<%= @repair.location %>">
  </div>

  <div class="form-group">
    <label for="repair_type">
      Repair type
    </label>

    <input type="text" id="repair_type" name="repair_type" class="form-control" value="<%= @repair.repair_type %>">
  </div>

  <div class="form-group">
    <label for="price">
      Price
    </label>

    <input type="text" id="price" name="price" class="form-control" value="<%= @repair.price %>">
  </div>

  <input type="hidden" name="client_id" value="<%= current_client.id %>">

  <div class="form-group">
    <label for="service_provider_id">
      Service provider
    </label>

    <%= select_tag(:service_provider_id, options_from_collection_for_select(ServiceProvider.all, :id, :created_at, @repair.service_provider_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="car_type">
      Car type
    </label>

    <input type="text" id="car_type" name="car_type" class="form-control" value="<%= @repair.car_type %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create repair
  </button>
</form>

<hr>

<a href="/repairs">
  Go back
</a>
