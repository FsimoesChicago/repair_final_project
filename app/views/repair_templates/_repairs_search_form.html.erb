<%= search_form_for @q, :class => collapse_search_form, :id => "repairs_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :car_type_cont, "Car type contains" %>
    <%= f.text_field :car_type_cont, :class => "form-control", :placeholder => "Car type contains" %>
  </div>

  <div class="form-group">
    <%= f.label :price, "Price" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :price_gteq, :class => "form-control", :placeholder => "Price greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :price_lteq, :class => "form-control", :placeholder => "Price less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :repair_type_cont, "Repair type contains" %>
    <%= f.text_field :repair_type_cont, :class => "form-control", :placeholder => "Repair type contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :created_at, "Client Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='clientgteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :client_created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Client Created at greater than or equal to", :data => {:target => '#clientgteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#clientgteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='clientlteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :client_created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Client Created at less than or equal to", :data => {:target => '#clientlteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#clientlteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#clientgteqcreated_atPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#clientlteqcreated_atPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#clientgteqcreated_atPicker').on("dp.change", function (e) {
              $('#clientlteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#clientlteqcreated_atPicker').on("dp.change", function (e) {
              $('#clientgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :created_at, "ServiceProvider Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='service_providergteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :service_provider_created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "ServiceProvider Created at greater than or equal to", :data => {:target => '#service_providergteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#service_providergteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='service_providerlteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :service_provider_created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "ServiceProvider Created at less than or equal to", :data => {:target => '#service_providerlteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#service_providerlteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#service_providergteqcreated_atPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#service_providerlteqcreated_atPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#service_providergteqcreated_atPicker').on("dp.change", function (e) {
              $('#service_providerlteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#service_providerlteqcreated_atPicker').on("dp.change", function (e) {
              $('#service_providergteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/repairs" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

