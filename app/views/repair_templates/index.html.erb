<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All repairs
    </h1>

    <a href="/repairs/new" class="btn btn-block btn-outline-secondary">
      Add a new repair
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "repair_templates/repairs_search_form" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-12">
    <%= render partial: "repair_templates/all_photos_map" %>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Location
        </th>

        <th>
          Repair type
        </th>

        <th>
          Price
        </th>

        <th>
          Client
        </th>

        <th>
          Service provider
        </th>

        <th>
          Car type
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @repairs.each do |repair| %>
      <tr>
        <td>
          <%= repair.id %>
        </td>

        <td>
          <%= repair.location %>
        </td>

        <td>
          <%= repair.repair_type %>
        </td>

        <td>
          <%= repair.price %>
        </td>

        <td>
          <% if repair.client.present? %>
            <a href="/clients/<%= repair.client.id %>">
              <%= repair.client.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <% if repair.service_provider.present? %>
            <a href="/service_providers/<%= repair.service_provider.id %>">
              <%= repair.service_provider.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <%= repair.car_type %>
        </td>

        <td>
          <%= time_ago_in_words(repair.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(repair.updated_at) %> ago
        </td>

        <td>
          <a href="/repairs/<%= repair.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @repairs, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
